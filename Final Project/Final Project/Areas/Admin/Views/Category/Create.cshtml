@using Service.DTOs.Admin.Categories
@model CategoryCreateVM

<div class="container-fluid mt-4">
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="sliderinfo">Title</label>
            <input asp-for="Name" class="form-control" id="sliderinfo" maxlength="1000">
            <span class="text-danger" asp-validation-for="Name"></span>

        </div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>
