@using Service.ViewModel.Admin.News
@model IEnumerable<NewsVM>
<main id="blog">
    <section id="blog-background"></section>
    <section id="blog-introduction">
        <p>Organic Information</p>
        <h1>New</h1>
    </section>
    <section id="blog-news">
        <div class="news">
            @foreach (var item in Model)
            {
                <div class="blog-card">
                    <div class="blogs-header">
                        <a asp-action="Detail" asp-route-id="@item.Id"><img src=@item.ImageUrl alt="" /></a>
                    </div>
                    <div class="blogs-title">
                        <div class="blog-title-meta">
                            <a asp-action="Detail" asp-route-id="@item.Id">
                                <span class="meta-name"><i class="bi bi-person"></i> @item.Title</span>
                                <span class="meta-date">
                                   @*  , <i class="bi bi-calendar3"></i>
                                    <span class="meta-date_info">@item.</span> *@
                                </span>
                            </a>
                        </div>
                        <h3><a asp-action="Detail" asp-route-id="@item.Id">@item.Tag</a></h3>
                        <p>
                            @item.Description
                        </p>
                        <a asp-action="Detail" asp-route-id="@item.Id" class="read-more-link">READ MORE</a>
                    </div>
                </div>
            }                    
        </div>
        <div class="blog-pagination">
            <div aria-label="Page navigation">
                <ul class="pagination custom-pagination">
                    <li class="page-item">
                        <a class="page-link" href="#">Prev</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </div>
        </div>
    </section>
</main>