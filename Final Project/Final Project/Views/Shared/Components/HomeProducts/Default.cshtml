@using Service.DTOs.Admin.Products
@model IEnumerable<ProductVM>

<section id="home-products">
    <div class="products">
        <div class="products-header">
            <p>
                Best Seller
            </p>
        </div>
        <div class="products-cards">
          
          @foreach (var item in Model.ToList().Take(4))
            {
                <div class="products-card">
                    <div class="cart-item">
                        <div class="cart-item_img">
                            <a href="">
                                <img src="@item.IsMainPicture" style="height : 100px" alt="" />
                            </a>
                        </div>
                    </div>
                    <h3> @item.Name</h3>
                    <p>
                        <span>Per Kg</span>
                        @item.Price
                    </p>
                    <a href="">
                        <form asp-action="AddToBasket" asp-controller="Basket" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit">


                                <i class="bi bi-cart-plus-fill"></i>
                                Add to Cart
                            </button>
                        </form>
                        <form asp-action="AddToWishList" asp-controller="Wishlist" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit">
                                <i class="bi bi-cart-plus-fill"></i>
                                Add to Wishlist
                            </button>
                        </form>
                    </a>
                </div>

            }
               
        </div>
    </div>
   
</section>